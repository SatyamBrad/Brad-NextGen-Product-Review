{% assign rating = 4.6 %}
{% assign total_reviews = 4763 %}
{% assign full_stars = rating | floor %}
{% assign half_star = rating | modulo: 1 %}
{% assign empty_stars = 5 | minus: full_stars | minus: half_star > 0 %}

<div style="display: flex; align-items: center;">
  <div>
    {% for i in (1..full_stars) %}
      <span style="color: #FFA500;">&#9733;</span> <!-- Full Star -->
    {% endfor %}

    {% if half_star > 0 %}
      <span style="color: #FFA500;">&#9733;</span> <!-- Half Star -->
    {% endif %}

    {% for i in (1..empty_stars) %}
      <span style="color: #ccc;">&#9733;</span> <!-- Empty Star -->
    {% endfor %}
  </div>

  <div style="margin-left: 8px;">
    <span style="font-size: 18px; font-weight: bold;">{{ rating }}</span>
    <span style="font-size: 16px; color: #666;">{{ total_reviews }} ratings</span>
  </div>
</div>

{% schema %}
{
"name": "Review rating",
"target": "section",
"stylesheet": "bnpr_review-rating.css",
"settings": [
{
"type": "product",
"id": "product",
"label": "Product",
"autofill": true
}, {
"type": "color",
"id": "color",
"label": "Star Colour",
"default": "#FFD700"
}
]
}
{% endschema %}